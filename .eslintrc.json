{
    "extends": "eslint-config-airbnb",
    "env": {
        "browser": true
    },
    "parser": "babel-eslint",
    "rules": { // comma stuff
        "comma-dangle": [
            "error",
            "never"
        ],
        // prefer defaults
        
        // for indent types
        "indent": [
            "error",
            4
        ],
        "jsx-quotes": [
            "error",
            "prefer-single"
        ],
        // something with LF and CRLF formating
        "linebreak-style": [
            "error",
            "windows"
        ],
        // allow jsx in files with .js
        "react/jsx-filename-extension": [
            1,
            {
                "extensions": [
                    ".js",
                    ".jsx"
                ]
            }
        ],
        // more indent stuff?
        "react/jsx-indent": [
            true,
            12
        ]
    },
    "settings": {
        "import/parser": "babel-eslint"
    }
}
